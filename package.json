{
  "name": "react-native-universal-project",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/bff",
      "packages/app",
      "packages/mobile"
    ],
    "nohoist": [
      "**/@react-native-async-storage/async-storage",
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-codegen",
      "**/react-native-dev-menu",
      "**/react-native-macos",
      "**/react-native-windows"
    ]
  },
  "scripts": {
    "reset": "find src -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "android:metro": "yarn workspace @monetime/mobile start",
    "android:start": "yarn workspace @monetime/mobile android",
    "android:studio": "yarn workspace @monetime/mobile studio",
    "ios:metro": "yarn workspace @monetime/mobile start",
    "ios:start": "yarn workspace @monetime/mobile ios",
    "ios:xcode": "yarn workspace @monetime/mobile xcode",
    "ios:pods": "yarn workspace @monetime/mobile pods",
    "tv:android:metro": "yarn workspace @monetime/tv start",
    "tv:android:start": "yarn workspace @monetime/tv android",
    "tv:android:studio": "yarn workspace @monetime/tv studio",
    "tv:tvos:metro": "yarn workspace @monetime/tv start",
    "tv:tvos:start": "yarn workspace @monetime/tv ios",
    "tv:tvos:xcode": "yarn workspace @monetime/tv xcode",
    "tv:tvos:pods": "yarn workspace @monetime/tv pods",
    "macos:metro": "yarn workspace @monetime/macos start",
    "macos:start": "yarn workspace @monetime/macos macos",
    "macos:xcode": "yarn workspace @monetime/macos xcode",
    "macos:pods": "yarn workspace @monetime/macos pods",
    "web:start": "yarn workspace @monetime/web start",
    "web:build": "yarn workspace @monetime/web build",
    "next:start": "yarn workspace @monetime/next dev",
    "next:build": "yarn workspace @monetime/next build",
    "next:serve": "yarn workspace @monetime/next start",
    "electron:start": "yarn workspace @monetime/electron start",
    "electron:package:mac": "yarn workspace @monetime/electron package:mac",
    "electron:package:win": "yarn workspace @monetime/electron package:win",
    "electron:package:linux": "yarn workspace @monetime/electron package:linux",
    "browser-ext:start": "yarn workspace @monetime/browser-ext start",
    "browser-ext:build": "yarn workspace @monetime/browser-ext build",
    "windows:metro": "yarn workspace @monetime/browser-ext start",
    "windows:start": "yarn workspace @monetime/browser-ext windows",
    "lint": "ultra -r lint",
    "lint:fix": "ultra -r lint:fix",
    "test": "ultra -r test",
    "typecheck": "ultra -r typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-native": "^3.11.0",
    "prettier": "^2.3.2",
    "typescript": "4.4.4",
    "ultra-runner": "^3.10.5"
  }
}
