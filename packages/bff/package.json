{
  "name": "@monetime/bff",
  "version": "0.0.1",
  "description": "Boilerplate for developing microservices with Node.js, Express.js, TypeScript",
  "private": true,
  "main": "dist",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.4.1"
  },
  "scripts": {
    "dev": "npx nodemon",
    "dev-server": "ts-node ./src/index.ts",
    "genTypes": "npx mtgen **/routes/**/model.ts ",

    "start": "npm-run-all build build:run",
    "build": "tsc --skipLibCheck",
    "build:run": "node ./lib",

    "test": "npm run test:unit && npm audit",
    "test:unit": "",
    "test:integration": ""
  },
  "dependencies": {
    "@types/express-list-endpoints": "^6.0.0",
    "@types/underscore": "^1.11.3",
    "compression": "^1.7.2",
    "connect-datadog": "^0.0.6",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "express": "^4.16.2",
    "express-list-endpoints": "^6.0.0",
    "express-rate-limit": "^3.5.1",
    "express-validator": "^6.13.0",
    "fflip": "^4.0.0",
    "fflip-express": "^1.0.2",
    "fs-extra": "^7.0.1",
    "helmet": "^3.18.0",
    "hot-shots": "^4.7.0",
    "hpp": "^0.2.2",
    "http-status-codes": "^1.3.0",
    "mongoose": "^6.0.12",
    "mongoose-tsgen": "^8.4.6",
    "npx": "^10.2.2",
    "supertest": "^3.0.0",
    "tslib": "^1.9.3",
    "underscore": "^1.13.1"
  },
  "devDependencies": {
    "@types/compression": "0.0.35",
    "@types/cookie-parser": "1.4.1",
