{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist",

        "allowJs": false,
        "allowSyntheticDefaultImports": true,

        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,

        "lib": [ "es2018"],
        "jsx": "react",
        "module": "commonjs",
        "importHelpers": true,
        "experimentalDecorators": true
    },
    "include": [
        "./**/*"
    ]
}
