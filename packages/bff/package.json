    "@types/fs-extra": "5.0.0",
    "@types/helmet": "0.0.43",
    "@types/hpp": "0.2.1",
    "@types/supertest": "2.0.4",
    "@types/webpack": "^4.4.22",
    "core-js": "2.6.1",
    "expressmocks": "^0.1.3",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.9.2",
    "sinon": "7.2.2",
